{% endif %}

{% if potos_dconf_org_gnome_desktop_wm_preferences_auto_raise is defined and not potos_dconf_org_gnome_desktop_wm_preferences_auto_raise %}
[org/gnome/desktop/wm/preferences]
auto-raise=false
{% endif %}

